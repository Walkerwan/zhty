{
  "compilerOptions": {
    "target": "ESNext",
		"module": "ESNext",
		"baseUrl": "./",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"isolatedModules": true,
		"removeComments": true,
		"jsx": "preserve",
		"jsxFactory": "h",
		"experimentalDecorators": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"sourceMap": false,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
    "types": ["node"],
		"typeRoots": ["node_modules/@types"],
		"lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "esnext", "dom.iterable"]
  },
  "exclude": ["node_modules", "build"],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/shims-import.d.ts",
		"test/**/*.ts"
	],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
